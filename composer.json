{
    "name": "ikijime/php-project-lvl2",
    "description": "Compare two configuration files and output difference.",
    "keywords": ["hexlet"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
          "name": "Alexei Utkin",
          "email": "lith@protonmail.ch"
        }
    ],

    "bin": [
        "bin/gendiff.php"
    ],

    "autoload": {
        "files": [
            "src/Differ.php"
        ],
        "psr-4": {
            "Differ\\": "src",
            "Differ\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "10.0.x-dev",
        "squizlabs/php_codesniffer": "4.0.x-dev",
        "phpstan/phpstan": "0.12.x-dev"
    },
    "minimum-stability": "dev",
    "require": {
        "docopt/docopt": "dev-master",
        "funct/funct": "^1.5"
    },
    "scripts": {
        "lint": "composer exec --verbose phpcs -- --standard=PSR12 bin src tests",
        "phpstan": "composer exec --verbose phpstan -- --level=8 analyse bin src tests",
        "test": "composer exec --verbose phpunit tests"
    }
}
